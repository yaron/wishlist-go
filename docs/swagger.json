{
  "swagger": "2.0",
  "info": {
    "description": "Wishlist backend API",
    "version": "1.0.0",
    "title": "Wishlist in GO",
    "contact": {
      "email": "yaron@ytal.nl"
    }
  },
  "host": "localhost:8080",
  "basePath": "/",
  "tags": [
    {
      "name": "Items",
      "description": "Listing, claiming and unclaiming items"
    },
    {
      "name": "Authorisation",
      "description": "Login"
    },
    {
      "name": "Privileged",
      "description": "Admin operations"
    }
  ],
  "schemes": [
    "https",
    "http"
  ],
  "paths": {
    "/list": {
      "get": {
        "tags": [
          "Items"
        ],
        "summary": "List all items",
        "description": "",
        "operationId": "List",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/WishlistItem"
              }
            }
          },
          "500": {
            "description": "An internal error"
          }
        }
      }
    },
    "/claim": {
      "post": {
        "tags": [
          "Items"
        ],
        "summary": "Mark an item as claimed",
        "description": "If an email address is provided, the return code can be 200 and the return value can contain an error stating the it was unable to send the mail.",
        "operationId": "Claim",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "Claim",
            "schema": {
              "type": "object",
              "required": [
                "id"
              ],
              "properties": {
                "id": {
                  "type": "integer",
                  "description": "The ID of the item to claim"
                },
                "mail": {
                  "type": "string",
                  "format": "email"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string"
                },
                "error": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Something went wrong with claiming this item"
          }
        }
      }
    },
    "/unclaim": {
      "post": {
        "tags": [
          "Items"
        ],
        "summary": "Mark an item as unclaimed",
        "operationId": "Unclaim",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "Unclaim",
            "schema": {
              "type": "object",
              "required": [
                "id",
                "key"
              ],
              "properties": {
                "id": {
                  "type": "integer",
                  "description": "The ID of the item to unclaim"
                },
                "key": {
                  "type": "string",
                  "description": "The secret that was mailed to the user"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Something went wrong with unclaiming this item"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": [
          "Authorisation"
        ],
        "summary": "Get a token to run privileged operations",
        "operationId": "Login",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "Unclaim",
            "schema": {
              "type": "object",
              "required": [
                "user",
                "password"
              ],
              "properties": {
                "user": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string"
                },
                "token": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Something went wrong with logging in (other that wrong username/password)"
          },
          "401": {
            "description": "Wrong username or password"
          }
        }
      }
    },
    "/admin/add": {
      "post": {
        "tags": [
          "Privileged"
        ],
        "summary": "Create a new wishlist item",
        "operationId": "Add",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "security": [
          {
            "APIKeyHeader": []
          }
        ],
        "parameters": [
          {
            "in": "body",
            "name": "Add",
            "schema": {
              "$ref": "#/definitions/WishlistItem"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Something went wrong with unclaiming this item"
          }
        }
      }
    }
  },
  "definitions": {
    "WishlistItem": {
      "description": "An item on a whishlist",
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "price": {
          "type": "integer",
          "description": "price in cents"
        },
        "claimed": {
          "type": "boolean",
          "description": "Wether the item has been claimed by someone"
        },
        "claimable": {
          "type": "boolean",
          "description": "Wether the item can be claimed by someone"
        },
        "url": {
          "type": "string"
        },
        "image": {
          "type": "string"
        }
      }
    }
  },
  "securityDefinitions": {
    "APIKeyHeader": {
      "description": "Start the header with \"Bearer\" followed by the token returned by the login operation",
      "type": "apiKey",
      "in": "header",
      "name": "Authorization"
    }
  }
}